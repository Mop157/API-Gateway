{
    "compilerOptions": {
        "target": "ES2023",                          
        "module": "commonjs",                     
        "strict": true,                           
        "esModuleInterop": true,                 
        "skipLibCheck": true,                    
        "forceConsistentCasingInFileNames": true, 
        "outDir": "./dist",                       
        "rootDir": "./src",                      
        "noImplicitAny": true,                    
        "resolveJsonModule": true,               
        "sourceMap": true                         
    },
    "include": [
        "src/**/*.ts"  
    ],
    "exclude": [
        "node_modules" 
    ]
}
